---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Voyage',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>

  <Hero2
    actions={[
      {
        variant: 'primary',
        text: 'Learn more',
        href: '#features',
      },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
    A Trip made for<span class="text-primary highlight"> You</span><br/>Where Your Taste Shapes the <span class="text-primary highlight"> Journey</span>
    </Fragment>

    <Fragment slot="subtitle">
    Because your taste deserves more than generic recommendations
    </Fragment>
  </Hero2>



  <Features
    id="features"
    tagline="Features"
    title="Say Bon Voyage to Planning"
    items={[
      {
        title: 'Provide personally tailored activity recommendations',
        // description:"",
        icon: 'tabler:map',
      },
      {
        title: 'Smooth and straightforward user interaction',
        // description: "",
        icon: 'tabler:users',
      },
      {
        title: 'Simplified trip budgeting',
        // description:"",
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Reduce research and planning time',
        // description:"",
        icon: 'tabler:search',
      }
    ]}
  />


  <Steps
    title="Project Milestones"
    items={[
      {
        title: 'Milestone 1',
        description:
          "Presentation of Lifecycle Objectives and Calendar for the Project.",
        icon: 'tabler:calendar-event',
      },
      {
        title: 'Milestone 2',
        description:
          "Presentation of the Lifecycle Architecture.",
        icon: 'tabler:layout-kanban',
      },
      {
        title: 'Milestone 3',
        description:
          'Prototype.',
        icon: 'tabler:file-text',
      },
      {
        title: 'Milestone 4',
        description:
          'Project Presentation.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />


    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>


  <BlogLatestPosts
    title="Presentations"
  />


</Layout>
